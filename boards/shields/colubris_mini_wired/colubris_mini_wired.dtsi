#include <dt-bindings/zmk/matrix_transform.h>
#include "colubris_mini_wired-layout.dtsi"
#include <dt-bindings/pinctrl/rpi-pico-rp2040-pinctrl.h>


&colubris_layout{
        kscan = <&kscan0>;
        transform = <&default_transform>;
};

/ {
    chosen {
        zmk,physical-layout = &colubris_layout;
    };

    
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <30>;
        rows = <1>;
        map = <
                     RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)       RC(0,13)  RC(0,14)  RC(0,15)  RC(0,16)    
            RC(0,4)  RC(0,5)  RC(0,6)  RC(0,7)  RC(0,8)       RC(0,17)  RC(0,18)  RC(0,19)  RC(0,20)  RC(0,21)    
                     RC(0,9)  RC(0,10) RC(0,11)                         RC(0,22)  RC(0,23)  RC(0,24)  
                                                RC(0,12)      RC(0,25) 
        >;
    };

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;
    };

    &pinctrl {
  uart0_default: uart0_default {
    group1 {
      pinmux = <UART0_TX_P12>;        // TX on GPIO12
    };
    group2 {
      pinmux = <UART0_RX_P13>;        // RX on GPIO13
      input-enable;
    };
  };
};

&uart0 {
  status = "okay";
  pinctrl-0 = <&uart0_default>;
  pinctrl-names = "default";
};


    wired_split {
        compatible = "zmk,wired-split";
        device = <&uart0_default>;
    };

};